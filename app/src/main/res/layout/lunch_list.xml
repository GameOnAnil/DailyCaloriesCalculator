<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/lunch_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textColor="#000"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/lunch_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Calorie"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="25dp"
        />

    <TextView
        android:id="@+id/lunch_food_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Amount"
        android:textSize="10dp"
        android:layout_below="@id/lunch_food_name"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/lunch_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Quantity"
        android:textSize="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/lunch_calorie"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="25dp"
        />

</RelativeLayout>