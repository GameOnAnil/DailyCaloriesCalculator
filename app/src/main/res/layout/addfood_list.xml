<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginBottom="3dp">


        <TextView
            android:id="@+id/add_food_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Calorie"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"

            />
    <TextView
        android:id="@+id/add_food_food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="Food Name"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_marginTop="3dp"

        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/food_Calorie"

        />


    <TextView
        android:id="@+id/add_food_food_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Amount"
        android:textSize="13dp"
        android:layout_below="@+id/add_food_food_name"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="10dp"
        />



</RelativeLayout>